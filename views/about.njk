{% extends "layout.njk" %}

    {% block head %}

        <title>Sobre - {{about.name}}</title>
        <link rel="icon" href="https://raw.githubusercontent.com/rocketseat-education/bootcamp-launchbase-desafios-02/master/desafios/favicon.ico" type="image/x-icon" />
        <link rel="stylesheet" href="styles.css">

    {% endblock%}
    

    {% block content %}

        <div id="area-logo">
            <img src="{{about.url_Img}}" alt="Logo {{about.name}}">
            <h1>{{about.name}}</h1>
            <p>{{about.description}}</p>
        </div>

        <div id="lista-tecnologias">

            <h4>Nossas Principais Tecnologias</h4>
            <ul>
                {% for link in about.links_Tech %}

                    <li><a href="{{link.url}}" target="_blank">{{link.name}}</a></li>

                {% endfor %}
                
            </ul>
        </div>

        <footer>

            <h4>Nossas Redes Sociais</h4>
                {% for link in about.Links_Social_Networks %}
           
                 <a href="{{link.url}}" target="_blank" >{{link.name}}</a>

                {% endfor %}


        </footer>

    {% endblock %}